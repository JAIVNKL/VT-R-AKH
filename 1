<body>
    <div class="container">
        <h1>שאלון הכרות</h1>
        <form id="survey-form" onsubmit="sendEmail(event)">
            <div class="input-group">
                <label for="name">שם:</label>
                <input type="text" id="name" required>
            </div>
            <div class="input-group">
                <label for="age">גיל:</label>
                <input type="number" id="age" required>
            </div>
            <div class="input-group">
                <label for="email">אימייל:</label>
                <input type="email" id="email" required>
            </div>
            <div class="input-group">
                <label for="hobbies">מהם התחביבים שלך?</label>
                <textarea id="hobbies" rows="3"></textarea>
            </div>
            <div class="instructions">
                בכרטיסייה שנפתחת, יש ללחוץ על שליחה
            </div>
            <div class="button-group">
                <button type="submit">שלח</button>
            </div>
        </form>
        <div class="thank-you" id="thank-you">
            תודה!
            <div class="button-group">
                <button type="button" onclick="closeTab()">יציאה</button>
            </div>
        </div>
    </div>

    <script>
        function sendEmail(event) {
            event.preventDefault();
            const name = document.getElementById('name').value;
            const age = document.getElementById('age').value;
            const email = document.getElementById('email').value;
            const hobbies = document.getElementById('hobbies').value;

            const subject = encodeURIComponent('שאלון הכרות');
            const body = encodeURIComponent(`שם: ${name}\nגיל: ${age}\nאימייל: ${email}\nתחביבים: ${hobbies}`);
            const mailtoLink = `https://mail.google.com/mail/?view=cm&fs=1&to=ht1234567890abc@gmail.com&su=${subject}&body=${body}`;
            
            const a = document.createElement('a');
            a.href = mailtoLink;
            a.target = '_blank';
            a.click();

            document.getElementById('survey-form').style.display = 'none';
            document.getElementById('thank-you').style.display = 'block';
        }

        function closeTab() {
            window.close();
        }
    </script>
</body>
